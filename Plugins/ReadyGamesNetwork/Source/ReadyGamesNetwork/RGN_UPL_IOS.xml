<?xml version="1.0" encoding="utf-8"?>
<root>
  <init>
    <setStringFromProperty result="ProjectId" ini="Game" section="/Script/ReadyGamesNetwork.ReadyGamesNetworkSettings" property="ProjectId" default=""/>
    <log text="ReadyGamesNetwork SDK iOS Initialization"/>
  </init>

  <iosPListUpdates>
    
    <addElements tag="dict" once="true">
      <key>CFBundleURLTypes</key>
      <array>
        <dict>
          <key>CFBundleTypeRole</key>
          <string>Editor</string>
          <key>CFBundleURLName</key>
          <string>URL_PLACEHOLDER</string>
          <key>CFBundleURLSchemes</key>
          <array>
            <string>URL_SCHEME_PLACEHOLDER</string>
          </array>
        </dict>
      </array>
    </addElements>

    <loopElements tag="dict">
      
      <loopElements tag="$">
        <setStringFromTagTet result="TagText" tag="$"/>

        <setBoolIsEqual result="bIsUrlName" arg1="$S(TagText)" arg2="URL_PLACEHOLDER"/>
        <if condition="bIsUrlName">
          <true>
            <removeElement tag="$"/>
            <addElement tag="$" value="&lt;string&gt;$S(ProjectId)&lt;/string&gt;)"/>
          </true>
        </if>

        <setBoolIsEqual result="bIsUrlScheme" arg1="$S(TagText)" arg2="URL_SCHEME_PLACEHOLDER"/>
        <if condition="bIsUrlScheme">
          <true>
            <removeElement tag="$"/>
            <addElement tag="$" value="&lt;string&gt;$S(ProjectId)&lt;/string&gt;)"/>
          </true>
        </if>

      </loopElements>
      
    </loopElements>
    
  </iosPListUpdates>
</root>
